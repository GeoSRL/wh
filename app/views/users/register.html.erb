  <% return show_flash "You're already logged in", "alert" if is_logged_in? %>

  <%= form_for @user, :html => { :class => "form-signin" } do |f| %>

    <% if @user.errors.any? %>
    <div class="span6 pull-right">
   
         <div class="alert alert-error">
             <%= @user.errors.count.to_s + " errors found" %>
         </div> 
         <ul>
           <% @user.errors.full_messages.each do |e| %>
             <li><%= e.humanize %></li>
           <% end %>
         </ul>
    </div>
    <% end %>

    <legend class="form-signin-heading">Register</legend>

    <%= f.text_field :email, :type => "email", :placeholder => "Email", :class => "form-control", :required => "true", :autofocus => "true" %>
    <%= f.text_field :name, :type => "name", :placeholder => "Name", :class => "form-control", :required => "true" %>
    <%= f.password_field :password, :class => "form-control", :placeholder => "Password", :required => "true" %>
    <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm password", :required => "true" %>
  
    <%= f.submit :Register, :class => "btn btn-primary btn-block" %>

  <% end %>