<%= show_flash flash[:notice], "success" %>

<% if is_logged_in? %>

  <%= content_tag :h3, "Welcome, #{user[:name]}", :class => "page-header no-bold" %>

<% else %>

  <p class="center well">
    If you have an account please 
    <%= link_to 'Login', login_path %> or you 
    can <%= link_to 'register', register_path %> 
    an account if you're interested.
  </p>

<% end -%>