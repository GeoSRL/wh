  <% return show_msg "You're already logged in", "info" if is_logged_in? %>

  <%= show_flash flash[:error], "error"  %>
  <%= show_flash flash[:notice], "success" %>

  <%= form_for :users, :url => login_form_url, :html => { :class => "form-signin", :role => "role" } do |f| %>

    <legend class="form-signin-heading">Login</legend>
    <%= f.text_field :email, :type => "email", :placeholder => "Email", :class => "form-control", :required => "true", :autofocus => "true" %>
    <%= f.password_field :password, :placeholder => "Password", :class => "form-control", :required => "true" %>
    <%= f.submit :Login, :class => "btn btn-primary btn-block" %>

  <% end %>