<h3 class="no-bold page-header">
  Editing <%= @carriage.serial %> (<%= link_to 'Back', carriage_show_path(@carriage.serial) %>)
</h3>

<%= form_for @carriage, :url => carriage_update_path do |f| %>
    <table class="table table-fluid">
      <thead>
        <tr>
          <th>#</th>
          <th>Model</th>
          <th>Type</th>
          <th>Orientation</th>
          <th>Motor</th>
          <th>PCB</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @carriage.id %></td>
          <td><%= f.text_field :model, :class => "input-small" %></td>
          <td><%= select :carriage, :stype, carriage_type.each { |t| [t.humanize, t] }, {:include_blank => "Carriage type"}, {:class => "input-small"} %></td>
          <td><%= f.text_field :orientation, :class => "input-small" %></td>
          <td><%= f.text_field :motor, :class => "input-small" %></td>
          <td><%= f.text_field :pcb, :class => "input-small" %></td>
        </tr>
      </tbody>
      <thead>
        <tr>
          <th>Status</th>
          <th>Order #</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>Warehouse position</th>
          <th>Serial</th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= select :carriage, :status, carriage_status.each { |t| [t.humanize, t] }, {:include_blank => "Carriage type"}, {:class => "input-small"} %></td>
        <td><%= f.text_field :orderno, :class => "input-small" %></td>
        <td><%= f.text_field :created_at, :class => "input-small" %></td>
        <td><%= f.text_field :updated_at, :class => "input-small" %></td>
        <td><%= f.text_field :warehouse_point, :class => "input-small" %></td>
        <td><%= f.text_field :serial, :class => "input-small" %></td>
      </tr>
      </tbody>
    </table>
    <%= f.submit :Update, :class => "clearfix btn btn-primary"  %>
<% end %>
