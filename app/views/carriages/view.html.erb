<% return show_msg("No Carriage found with ##{params[:serial]}", "error") if @carriage.nil? %>

<h3 class="no-bold pull-left page-header">
  <%= @carriage.serial %>
</h3>
<p class="pull-right">
  <%= link_to 'Edit', carriage_edit_path(@carriage.serial), :class => "btn btn-primary page-header" %> 
  <%= link_to 'Destroy', carriage_delete_path(@carriage.serial), :method => :delete, :class => "btn btn-primary page-header" %>
</p>
<table class="table table-fluid">
  <thead>
    <tr>
      <th>#</th>
      <th>Model</th>
      <th>Type</th>
      <th>Orientation</th>
      <th>Motor</th>
      <th>PCB</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @carriage.id %></td>
      <td><%= @carriage.model %></td>
      <td><%= @carriage.stype.humanize %></td>
      <td><%= @carriage.orientation %></td>
      <td><%= @carriage.motor %></td>
      <td><%= @carriage.pcb %></td>
    </tr>
  </tbody>
  <thead>
    <tr>
      <th>Status</th>
      <th>Order #</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Warehouse position</th>
      <th>Serial</th>
    </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @carriage.status.humanize %></td>
    <td><%= @carriage.orderno %></td>
    <td><%= @carriage.created_at %></td>
    <td><%= @carriage.updated_at %></td>
    <td><%= @carriage.warehouse_point.capitalize %></td>
    <td><%= @carriage.serial %></td>
  </tr>
  </tbody>
</table>