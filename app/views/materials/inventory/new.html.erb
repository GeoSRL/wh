<% return show_msg "Invalid deparment parameter given.", "error" if not valid_department %>

<h3 class="no-bold legend">Create</h3>

<div class="">
	<% if @inventory.errors.any? %>
		<%= content_tag :ul, :class => "pull-right clearfix" do %>
			<% @inventory.errors.full_messages.each do |e| %>
				<%= content_tag :li, e %>
			<% end -%>
		<% end -%>
	<% end -%>
</div>

<%= form_for @inventory, :url => materials_inventory_path(params[:department]), :html => { :class => "pull-left form-horizontal" } do |f| %>

	<div class="control-group">
		<div class="control-label"><%= f.label :Name %></div>
		<div class="controls"><%= f.text_field :name, :placeholder => "Name" %></div>
	</div>
	<div class="control-group">
		<div class="control-label"><%= f.label :Artwork %></div>
		<div class="controls"><%= f.text_field :artwork, :placeholder => "Artwork" %></div>
	</div>
	<div class="control-group">
		<div class="control-label"><%= f.label :Amount_left %></div>
		<div class="controls"><%= f.text_field :amount_left, :placeholder => "Amount left" %></div>
	</div>
	<div class="control-group">
		<div class="control-label"><%= f.label :Amount_per_box %></div>
		<div class="controls"><%= f.text_field :amount_per_box, :placeholder => "Amount per box" %></div>
	</div>
	<div class="control-group">
		<div class="control-label"><%= f.label :Warehouse_position %></div>
		<div class="controls"><%= f.text_field :wh_position, :placeholder => "Warehouse position" %></div>
	</div>

	<%= f.submit :Create %>
<% end -%>
